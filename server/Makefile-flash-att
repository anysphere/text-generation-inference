PYTHON_PATH := /opt/miniconda/bin/python
PIP_PATH := /opt/miniconda/bin/pip

build-flash-attention: flash-attention
	cd flash-attention && git fetch && git checkout $(flash_att_commit)
	cd flash-attention && $(PYTHON_PATH) setup.py build
	cd flash-attention/csrc/rotary && $(PYTHON_PATH) setup.py build
	cd flash-attention/csrc/layer_norm && $(PYTHON_PATH) setup.py build

install-flash-attention: build-flash-attention
	$(PIP_PATH) uninstall flash_attn rotary_emb dropout_layer_norm -y || true
	cd flash-attention && $(PYTHON_PATH) setup.py install && cd csrc/layer_norm && $(PYTHON_PATH) setup.py install && cd ../rotary && $(PYTHON_PATH) setup.py install

